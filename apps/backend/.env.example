# ===========================================
# The RIDE Backend - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/the_ride?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_super_secret_key_change_in_production
JWT_EXPIRATION=1h

# OSRM Routing Service
OSRM_URL=http://localhost:5000

# Location Updates
# Minimum distance (meters) driver must move before location is updated
# Lower values = more updates, higher accuracy but more Redis writes
# Higher values = fewer updates, less accurate but better performance
LOCATION_MIN_DISTANCE_M=10

# Rate Limiting (Throttler)
# Short burst limit (per second)
THROTTLE_SHORT_TTL=1000
THROTTLE_SHORT_LIMIT=10

# Medium limit (per minute)
THROTTLE_MEDIUM_TTL=60000
THROTTLE_MEDIUM_LIMIT=100
